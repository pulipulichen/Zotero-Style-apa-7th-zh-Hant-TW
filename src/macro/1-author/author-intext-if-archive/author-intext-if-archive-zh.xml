<macro name="author-intext-if-archive-zh">
  <group delimiter="，">
    <names variable="author">
      <name delimiter="、" initialize-with=". "/>
      <substitute>
        <text macro="title-intext"/>
      </substitute>
    </names>
    <!-- Replace with term="personal-communication" if that becomes available -->
    <text term="letter"/>
  </group>
</macro>