  <macro name="container-periodical-group-group-choose">
    <choose>
      <if variable="number">
        <!-- Ex. 6: Journal article with article number or eLocator -->
        <!-- This should be localized -->
        <group delimiter=" ">
          <text term="article-locator" text-case="capitalize-first"/>
          <text variable="number"/>
        </group>
      </if>
      <else>
        <text variable="page"/>
      </else>
    </choose>
  </macro>