  <macro name="bracketed">
    <!-- [Descriptive information] -->
    <!-- If there is a number, genre is already printed in macro="number" -->
    <choose>
      <if locale="zh jp 中文" match="any">
        <group prefix="〔" suffix="〕">
          <text macro="bracketed-group-choose" />
        </group>
      </if>
      <else>
        <group prefix="[" suffix="]">
          <text macro="bracketed-group-choose" />
        </group>
      </else>
    </choose>
  </macro>