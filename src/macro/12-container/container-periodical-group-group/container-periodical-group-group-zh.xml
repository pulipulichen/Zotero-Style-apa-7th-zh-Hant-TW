  <macro name="container-periodical-group-group-zh">
    <group delimiter="、">
      <text variable="container-title" font-weight="bold" text-case="title"/>
      <choose>
        <if variable="volume">
          <group>
            <text variable="volume" font-weight="bold"/>
            <text variable="issue" prefix="（" suffix="）"/>
          </group>
        </if>
        <else>
          <text variable="issue" font-weight="bold"/>
        </else>
      </choose>
      <text macro="container-periodical-group-group-choose" />
    </group>
  </macro>