<!-- Legal citations have their own rules -->
  <macro name="legal-cites">
    <choose>
      <if type="legal_case">
        <text macro="legal-cites-if-legal_case" />
      </if>
      <else-if type="bill">
        <text macro="legal-cites-if-bill" />
      </else-if>
      <else-if type="legislation">
        <text macro="legal-cites-if-legislation" />
      </else-if>
      <else-if type="treaty">
        <text macro="legal-cites-if-treaty" />
      </else-if>
    </choose>
  </macro>