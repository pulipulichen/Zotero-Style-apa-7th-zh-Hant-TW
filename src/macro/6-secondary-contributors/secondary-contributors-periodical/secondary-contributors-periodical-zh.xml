  <macro name="secondary-contributors-periodical-zh">
    <group delimiter="；">
      <choose>
        <if variable="title">
          <names variable="interviewer" delimiter="；" form="long">
            <name and="symbol" initialize-with=". " delimiter=", "/>
            <label form="short" prefix=", " text-case="title"/>
          </names>
        </if>
      </choose>
      <text macro="variable-translator" />
    </group>
  </macro>