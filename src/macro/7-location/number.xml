  <macro name="number">
    <choose>
      <if variable="number">
        <choose>
          <if locale="zh jp 中文" match="any">
            <group delimiter="、">
              <text marco="number-group-children" />
            </group>
          </if>
          <else>
            <group delimiter=", ">
              <text marco="number-group-children" />
            </group>
          </else>
        </choose>
      </if>
    </choose>
  </macro>